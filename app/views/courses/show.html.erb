<header>

	<h1 id="course-title"><%= @course.title%></h1>	

	<ul class="actions">
		<li><%= link_to "Edit Course", edit_course_path(@course), class: "edit" %></li> 		
		<li><%= link_to "Back", courses_path, class: "btn btn-secondary" %></li>
	</ul>
</header>

<div class="row">
	<div class= "col-sm-9">
		<img class="course-image" src="https://picsum.photos/600/354">
	</div>
</div>

<p>
  <strong>Short description:</strong>
  <%= @course.short_description %>
</p>

<p>
  <strong>Content</strong>
  <%= @course.description %>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
