<div class="row">
	<div class ="col-sm-8 col-sm-offset-2">
		
<%= simple_form_for(event) do |f| %>
	<%= f.input :title %>

	<%= f.label :description %>

	<%= f.rich_text_area :description %>

	<%= f.input :start_date, as: :datetime, html: true, start_year: Date.today.year, ampm: true, order: [:month, :day, :year] %>

	<%= f.input :end_date, as: :datetime, html: true, start_year: Date.today.year, ampm: true, order: [:month, :day, :year] %>
	
	<%= f.input :venue %>

	<%= f.input :location %>

	<%= f.input :category_id, collection: Category.all, label: "Select Category", prompt: true %>

	<%= f.input :image, as: :file, label: "Upload Event Image" %>

	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<p><%= link_to "Back", events_path %></p>
	</div>
</div>

